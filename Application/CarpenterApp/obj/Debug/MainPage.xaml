<Page
    x:Class="CarpenterApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarpenterApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="#FF6161C7" />
        <TextBlock x:Name="greeting" HorizontalAlignment="Left" Height="210" Margin="633,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="630" FontSize="64" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" TextAlignment="Center" LineHeight="64">
        	<Run/>
        	<LineBreak/>
        </TextBlock>
        <Grid HorizontalAlignment="Left" Height="400" Margin="120,100,0,0" Grid.Row="1" VerticalAlignment="Top" Width="1100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="30,30,30,30" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Button x:ConnectionId='3' x:Name="button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" RequestedTheme="Light"                    >
                    <Button.Background>
                        <ImageBrush ImageSource="ms-appx:/Assets/Cube.JPG" Stretch="Fill"/>
                    </Button.Background>
                </Button>
                <Grid Grid.Row="1">
                    <TextBlock FlowDirection="LeftToRight" Text="CUBE" FontSize="32" TextWrapping="Wrap" FontWeight="Bold" TextAlignment="Center" Foreground="Black" />
                </Grid>
            </Grid>
            <Grid Grid.Column="1" Margin="30,30,30,30" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Button x:ConnectionId='2' x:Name="button1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" RequestedTheme="Light"                               >
                    <Button.Background>
                        <ImageBrush ImageSource="ms-appx:/Assets/tri-pyramid.JPG" Stretch="Fill"/>
                    </Button.Background>
                </Button>
                <Grid Grid.Row="1">
                    <TextBlock FlowDirection="LeftToRight" Text="TRIANGULAR BASE PYRAMID" FontSize="32" TextWrapping="Wrap" FontWeight="Bold" TextAlignment="Center" Foreground="Black" />
                </Grid>
            </Grid>
            <Grid Grid.Column="2" Margin="30,30,30,30" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Button x:ConnectionId='1' x:Name="button2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" RequestedTheme="Light"                         >
                    <Button.Background>
                        <ImageBrush ImageSource="ms-appx:/Assets/cube-pyramid.JPG" Stretch="Fill"/>
                    </Button.Background>
                </Button>
                <Grid Grid.Row="1">
                    <TextBlock FlowDirection="LeftToRight" Text="RECTANGULAR BASE PYRAMID" FontSize="32" TextWrapping="Wrap" FontWeight="Bold" TextAlignment="Center" Foreground="Black" />
                </Grid>
            </Grid>
        </Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="90" Margin="355,5,0,0" TextWrapping="Wrap" Text="Select one of these" VerticalAlignment="Top" Width="630" Grid.Row="1" FontSize="48" FontWeight="Bold" Background="{x:Null}" Foreground="#FF6161C7" TextAlignment="Center"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="150" Margin="10,36,0,0" VerticalAlignment="Top" Width="236" Source="Assets/icon.JPG" Stretch="Fill"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="150" Margin="251,36,0,0" TextWrapping="Wrap" Text="Team11 Carpenter App" VerticalAlignment="Top" Width="346" Foreground="#FFF3EAEA" FontSize="42.667" FontWeight="Bold" FontFamily="Kristen ITC"/>

        <!--<Image x:Name="image" Source="Assets/cube-pyramid.jpg" HorizontalAlignment="Left" Height="238" Margin="942,161,0,0" Grid.Row="1" VerticalAlignment="Top" Width="321"/>
        <Image x:Name="image1" Source="Assets/Tri-pyramid.jpg" HorizontalAlignment="Left" Height="238" Margin="555,161,0,0" Grid.Row="1" Stretch="Fill" VerticalAlignment="Top" Width="321"/>
        <Image x:Name="image2" Source="Assets/Cube.jpg" HorizontalAlignment="Left" Height="238" Margin="165,161,0,0" Grid.Row="1" VerticalAlignment="Top" Width="321" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False"/>-->
    </Grid>

</Page>

